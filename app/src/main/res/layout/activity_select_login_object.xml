<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="top|center"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectLoginObjectActivity">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="P"
            android:textSize="50dp"
            android:textColor="#F89C22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="N"
            android:textSize="50dp"
            android:textColor="#29B789"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="l"
            android:textSize="50dp"
            android:textColor="#0B4B87"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="ibrary"
            android:textSize="30dp"
            android:textColor="#0B4B87"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:text="Who are you?"
        android:textSize="30dp"
        android:textColor="#0B4B87"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnAdmin"
        android:text="Admin"
        android:textSize="25dp"
        android:backgroundTint="#F89C22"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <Button
        android:id="@+id/btnLibrarian"
        android:text="Librarian"
        android:textSize="25dp"
        android:backgroundTint="#27B788"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <Button
        android:id="@+id/btnMember"
        android:text="Member"
        android:textSize="25dp"
        android:backgroundTint="#0B4B87"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

</LinearLayout>